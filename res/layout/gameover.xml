<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/whiteboard"  >

    <TextView
        android:gravity="center" 
        android:id="@+id/roundOver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textColor="@color/orange" 
        android:layout_marginTop="10dp"
        android:textSize="@dimen/mainmenu_title"/>

    <TextView
        android:gravity="center" 
        android:id="@+id/totalQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
         android:layout_marginTop="10dp"
          android:textColor="@color/red"
          android:textSize="@dimen/mainmenu_title"/>

    <TextView
        android:gravity="center" 
        android:id="@+id/numberCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textColor="@color/green"
        android:textSize="@dimen/mainmenu_title"/>

    <TextView
        android:gravity="center" 
        android:id="@+id/numberWrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textColor="@color/red"
        android:textSize="@dimen/mainmenu_title"/>

    <TextView
        android:gravity="center" 
        android:id="@+id/totalScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textColor="@color/orange"
        android:textSize="@dimen/mainmenu_title"/>
    
    <TextView
        android:gravity="center" 
        android:id="@+id/goToMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textColor="@color/orange"
        android:textSize="@dimen/mainmenu_title"
        android:clickable="true"
        android:onClick="goToMenu"
        android:text="Menu"/>
    
     <TextView
        android:gravity="center" 
        android:id="@+id/goPlayAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textColor="@color/blue"
        android:textSize="@dimen/mainmenu_title"
        android:clickable="true"
        android:onClick="goPlayAgain"
        android:text="PlayAgain"/>

</LinearLayout>