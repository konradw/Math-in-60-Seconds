<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiteboard"
    android:orientation="vertical" >

    <TextView
        android1:id="@+id/scores_title"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:text="TextView" android1:gravity="center" android1:layout_marginTop="10dp"/>

    <TabHost
        android:id="@+id/TabHost1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:id="@+id/easyScores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical">
					
                    <TableLayout
                        android:id="@+id/table_med"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="*"
                        >
                    <TextView
                        android1:id="@+id/easyAdd"
                        android1:layout_width="match_parent"
                        android1:layout_height="wrap_content"
                        android1:text="Addition" 
                        android1:gravity="center" 
                        android1:textColor="@color/orange" 
                        android1:textSize="@dimen/mainmenu_title"/>
                    <TextView
                        android1:id="@+id/addScore"
                        android1:layout_width="match_parent"
                        android1:layout_height="wrap_content" 
                        android1:gravity="center" 
                        android1:textColor="@color/orange"
                        android1:textSize="@dimen/mainmenu_title"/>
                    <TextView
                        android1:id="@+id/easySub"
                        android1:layout_width="match_parent"
                        android1:layout_height="wrap_content"
                        android1:text="Subtraction" 
                        android1:gravity="center" 
                        android1:textColor="@color/orange"
                        android1:textSize="@dimen/mainmenu_title"/>
                    <TextView
                        android1:id="@+id/subScore"
                        android1:layout_width="match_parent"
                        android1:layout_height="wrap_content" 
                        android1:gravity="center" 
                        android1:textColor="@color/orange"
                        android1:textSize="@dimen/mainmenu_title"/>
                    <TextView
                        android1:id="@+id/easyMult"
                        android1:layout_width="match_parent"
                        android1:layout_height="wrap_content"
                        android1:text="Multiplication" 
                        android1:gravity="center" 
                        android1:textColor="@color/orange"
                        android1:textSize="@dimen/mainmenu_title"/>
                    <TextView
                        android1:id="@+id/multScore"
                        android1:layout_width="match_parent"
                        android1:layout_height="wrap_content"
                        android1:gravity="center" 
                        android1:textColor="@color/orange"
                        android1:textSize="@dimen/mainmenu_title"/>
                    <TextView
                        android1:id="@+id/easyDiv"
                        android1:layout_width="match_parent"
                        android1:layout_height="wrap_content"
                        android1:text="Division" 
                        android1:gravity="center" 
                        android1:textColor="@color/orange"
                        android1:textSize="@dimen/mainmenu_title"/>
                    <TextView
                        android1:id="@+id/divScore"
                        android1:layout_width="match_parent"
                        android1:layout_height="wrap_content"
                        android1:gravity="center" 
                        android1:textColor="@color/orange"
                        android1:textSize="@dimen/mainmenu_title"/>
				</TableLayout>
                </ScrollView>
                <ScrollView
                    android:id="@+id/medScores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical">
                    <TableLayout
                        android:id="@+id/table_med"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="*"
                        ></TableLayout>
                </ScrollView>
                 <ScrollView
                    android:id="@+id/hardScores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical">
                    <TableLayout
                        android:id="@+id/table_hard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="*">
                    </TableLayout>
                    </ScrollView>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>